{
  // Specify tipescript configuration
  "compilerOptions": {
    "target": "es5", // compiled version 
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true, // typesqript should generate map files
    "emitDecoratorMetadata": true, // this
    "experimentalDecorators": true,// provide support to our decorators
    "removeComments": false,
    "noImplicitAny": false // all our variables can be strong typed or we can use any as type
  },
  "exclude": [ 
    // typesqript not to compiled specify files or folders
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}